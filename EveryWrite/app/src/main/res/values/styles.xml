<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom text styles -->
    <style name="TitleLarge" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/charcoal</item>
    </style>

    <style name="TitleMedium" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/charcoal</item>
    </style>

    <style name="BodyLarge" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_charcoal</item>
    </style>

    <style name="BodyMedium" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_charcoal</item>
    </style>

    <!-- Custom button styles -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/sunshine_yellow</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/sunshine_yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/sunshine_yellow</item>
    </style>
</resources>